@model Project.Models.ProjectUsers

@{
    ViewBag.Title = "EditUserPrivileges";
}

<div class="jumbotron bg-primary text-white">
    <div class="container">
        <h1 class="display-4">Edit @Model.User.UserName's privileges</h1>
        <p class="lead">Give or take away admin privileges for @Model.User.UserName</p>
    </div>
</div>

<h2>@Model.User.UserName</h2>

@using (Html.BeginForm("UpdateUserPrivileges", "Projects", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="form-group">
        @Html.LabelFor(model => model.ApplicationUserID, "ApplicationUserID", htmlAttributes: new { @class = "control-label col-md-2" })
        @Html.HiddenFor(model => model.ApplicationUserID)
    </div>

    <div class="form-group">
        @Html.Label("User", htmlAttributes: new { @class = "control-label col-md-2" })
        @Html.DisplayFor(model => model.User.UserName)
    </div>

    <div class="form-group">
        @Html.Label("Give Admin Privileges", htmlAttributes: new { @class = "control-label col-md-2" })
        @Html.CheckBoxFor(model => model.IsAdmin, htmlAttributes: new { @class = "form-control" })
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save" class="btn btn-default" />
        </div>
    </div>
}

