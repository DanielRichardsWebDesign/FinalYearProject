@model IEnumerable<Project.Models.ApplicationUser>

@{
    ViewBag.Title = "AddUser";
}

<div class="jumbotron bg-primary text-white">
    <div class="container">
        <h1 class="display-4">Add User</h1>
        <p class="lead">Add a user to this project...</p>
    </div>
</div>

<a href="@Url.Action("ProjectUsers", "Projects", new { id = ViewBag.PublicID })">Back to Project Users</a>
<br />
<h2>Add User</h2>
<p class="text-success">@ViewBag.Message</p>

<div class="card">
    <div class="card-header">
        Add User
    </div>
    <div class="card-body">
        @foreach (var item in Model)
        {
            using (Html.BeginForm("AddUserToProject", "Projects", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {                             
                <label for="AddUser">@item.UserName</label>
                <input type="hidden" name="userID" value="@item.Id" />
                <input type="hidden" name="publicID" value="@ViewBag.PublicID" />
                <input type="submit" class="btn btn-success" value="Add User" />                
            }
        }

    </div>    
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
