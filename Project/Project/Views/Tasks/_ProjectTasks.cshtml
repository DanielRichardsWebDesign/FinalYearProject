@model IEnumerable<Project.Models.Tasks>
@{
    ViewBag.Title = "_ProjectTasks";
}

    <div class="container">

        <div class="card-deck">
            
            <div class="card">
                <div class="card-header">
                    Tasks
                </div>
                <ul class="list-group list-group-flush">
                    @foreach (var item in Model.Where(i => i.IsComplete == false))
                    {
                        <li class="list-group-item">@item.TaskDescription</li>
                        <div class="card-body">
                            <a>@item.TaskDescription</a>
                        </div>
                    }
                </ul>
                <div class="card-body">
                    <button class="btn btn-success" data-toggle="modal" data-target="#createTaskModal">
                        <i class="fas fa-plus"></i>
                        Create Task
                    </button>
                </div>
            </div>

            <div class="card">
                <div class="card-header">
                    Completed Tasks
                </div>
                <ul class="list-group list-group-flush">
                    @foreach (var item in Model.Where(i => i.IsComplete == true))
                    {
                        <li class="list-group-item">@item.TaskDescription</li>
                        <div class="card-body">
                            <a>@item.TaskDescription</a>
                        </div>
                    }
                </ul>
            </div>

        </div>
    </div>

    <div class="modal fade bd-example-modal-lg" id="createTaskModal" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Create Task</h5>
                </div>
                <div class="modal-body">
                    @using (Html.BeginForm("CreateTask", "Projects", FormMethod.Post, new { enctype = "multipart/form-data" }))
                    {
                        <input type="hidden" name="projectID" value="@ViewBag.PublicID" />
                        <input type="hidden" name="userID" value="@ViewBag.ApplicationUserID" />

                        <div class="form-group">                            
                            <label for="exampleTask">Task Description</label>
                            <textarea class="form-control" name="taskDesc" rows="3" required></textarea>                            
                        </div>

                        <input type="submit" class="btn btn-default" />
                    }
                </div>
            </div>
        </div>
    </div>

